<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.avinsharma.notify.createAssignmentFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_assignment"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        android:background="@color/colorPrimary" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Assignment"
        android:textColor="#7B1FA2" />

    <EditText
        android:id="@+id/assignment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Input Title"
        android:textColor="#000000"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/date_editText_assignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="dd/mm/yyyy"
        android:inputType="date" />

    <EditText
        android:id="@+id/assignment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Description of the assignment" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Attachment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Attach"
            android:textAllCaps="true"
            android:textColor="#7B1FA2"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/add_assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ADD"
        android:textColor="@color/white"
        android:background="#7B1FA2"
        android:layout_marginTop="16dp"/>
    </LinearLayout>
</LinearLayout>
